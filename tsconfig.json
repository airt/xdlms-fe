// https://www.typescriptlang.org/docs/handbook/compiler-options.html
{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "esnext"]
  }
}
